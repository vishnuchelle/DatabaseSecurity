CREATE TABLE `account` (
  `BRANCH_CODE` char(4) NOT NULL,
  `ACC_NUMBER` char(8) NOT NULL,
  `CUSTOMER_ID` int(11) NOT NULL,
  `ACCTYPE_ID` char(3) NOT NULL,
  `ACC_BALANCE` decimal(10,2) DEFAULT NULL,
  PRIMARY KEY (`ACC_NUMBER`),
  KEY `fk_account_1_idx` (`BRANCH_CODE`),
  KEY `fk_account_2_idx` (`CUSTOMER_ID`),
  KEY `fk_account_3_idx` (`ACCTYPE_ID`),
  CONSTRAINT `fk_account_1` FOREIGN KEY (`BRANCH_CODE`) REFERENCES `branch` (`BRANCH_CODE`) ON DELETE NO ACTION ON UPDATE NO ACTION,
  CONSTRAINT `fk_account_2` FOREIGN KEY (`CUSTOMER_ID`) REFERENCES `customer` (`CUSTOMER_ID`) ON DELETE NO ACTION ON UPDATE NO ACTION,
  CONSTRAINT `fk_account_3` FOREIGN KEY (`ACCTYPE_ID`) REFERENCES `account_type` (`ACCTYPE_ID`) ON DELETE NO ACTION ON UPDATE NO ACTION
) ENGINE=InnoDB DEFAULT CHARSET=latin1;
UPDATE auth_number set AUTH_NUMBER= 1 WHERE CUSTOMER_ID=1000